<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Linear Layout -->
    <!-- This is a custom style for the linearLayout that contains the views of the app. -->
    <style name = "linear_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!-- Grid LAyout -->

    <style name = "grid_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:columnCount"> 3 </item>
        <item name="android:rowCount"> 3 </item>
        <item name="android:background">@drawable/border</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- Text View -->
    <!-- This is a custom style for the TextViews of the app.  -->
    <style name="TextViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>



</resources>
